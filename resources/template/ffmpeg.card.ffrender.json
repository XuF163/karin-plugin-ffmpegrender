{
  "width": 960,
  "height": 540,
  "background": {
    "color": "#ffffffff"
  },
  "layers": [
    {
      "type": "image",
      "src": "{{@(file || '').replace(/\\/g, '/')}}",
      "x": 40,
      "y": 60,
      "width": 320,
      "height": 420,
      "fit": "cover"
    },
    {
      "type": "text",
