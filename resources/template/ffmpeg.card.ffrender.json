      "y": 220,
      "fontSize": 22,
      "color": "#2b6cb0",
      "box": {
        "color": "#2b6cb033",
        "border": 10
      }
    },
    {
      "type": "text",
      "text": "{{@(desc || '').replace(/\\/g, '\\\\').replace(/\"/g, '\\\"').replace(/\r?\n/g, '\\n')}}",
